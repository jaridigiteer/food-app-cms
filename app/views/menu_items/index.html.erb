<div class="row align-items-center">
  <div class="col">
    <h2>Menu</h2>
  </div>
</div>
<div class="container mt-3 p-0">
    <div class = "row " style="margin: auto">
        <div class = "col-6 ps-0">
            <div class="row">
                <div class="col-8">
                    <div class="row position-relative">
                        <%= form_tag root_path, method: 'get', class:"col-11 pe-0", data: { turbo_frame: 'table-content', controller: 'admin--filter', action: 'input->admin--filter#submitForm' } do %>             
                            <input class="form-control rounded-0 border-end-0"  type="search" name="query" value="<%= params[:query] %>" placeholder="Search for Name"/>
                        <%end%>
                        <div class="col-1 p-0 search-magnify border border-start-0">
                            <div class= "text-center p-0 search-magnify">
                                <%=render "icons/magnifying-glass"%>
                            </div>  
                        </div>
                    </div>
                    
                
                    
                </div>
                <div class = "col-4">
                    <select class="form-select rounded-0" aria-label="Default select example">
                        <option selected>Category</option>
                        <option value="1">One</option>
                        <option value="2">Two</option>
                        <option value="3">Three</option>
                    </select>
                </div>
            </div>
        </div>

        <div class ="col-6 justify-content-end">
            <div class="row justify-content-end">
                <div class="col-auto">
                    <a href="#" class=" text-dark-red text-decoration-none" href="<%= root_path %>" aria-current="page">
                        <%= render "icons/square-plus"%>
                        Add Menu Item
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="mt-3">
  <%= render "partials/notice" %>
</div>
  <%= turbo_frame_tag 'table-content' do %>
    <div class="card mt-3">
        <table class="table">
            <thead>
            <tr class="dark-red text-white">
                <th scope="col" class= "bg-dark-red">ID </th>
                <th scope="col" class= "bg-dark-red">Image</th>
                <th scope="col" class= "bg-dark-red">Item Name <%=render "icons/caret-up-down"%></th> 
                <th scope="col" class= "bg-dark-red">Quantity <%=render "icons/caret-up-down"%></th>
                <th scope="col" class= "bg-dark-red">Status <%=render "icons/caret-up-down"%></th>
                <th scope="col" class= "bg-dark-red">Price <%=render "icons/caret-up-down"%></th>
            </tr>
            </thead>
            <%=render "table" %>
        </table>
    </div>
  <%end%>
